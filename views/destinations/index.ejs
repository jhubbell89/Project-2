<%- include('../partials/header')  %> 


<body>
<%- include('../partials/navbar')  %> 
<p>Welcome to destinations</p>
    
<form action="/destinations/index" method="post">
<label for="name">Destination:</label>
<input type="text" name="name" placeholder="e.g. Mt. St. Helens">
<br>
<br>
<input type="submit" value="Add Destination">
</form>

<br>
<% if (trip) { %>
    <table>
      <thead>
        <tr>
            <th>Name:</th>
            <th>Pass Required:</th>
            <th>Location:</th>
            <th>GPS Coordinates:</th>
        </tr>
      </thead>
      <tbody>
        <% destination.forEach(function(a) { %>
          <tr>
            <td><%= a.name %></td>
            <td><%= a.pass %></td>
            <td><%= a.location %></td>
            <td><%= a.gps %></td>
          </tr>
          <% }); %>
          <tr>
            <td colspan="4"></td>
          </tr>
      </tbody>
    </table>
<% } else { %>
    <h4>No Destinations Added Yet</h4>
<% } %> 
<br>

</body>
</html>
