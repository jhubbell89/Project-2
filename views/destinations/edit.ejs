<%- include('../partials/header')  %> 
<title>Update Destination</title>
<body>
<%- include('../partials/navbar')  %> 
<div class="info-box">
  <form action="/destinations/<%= destination.id %>/?_method=PUT" method="post">
    <div class="row">
      <div class="col-25">
        <label for="name">Destination:</label>
      </div>
      <div class="col-75">
    <input type="text" name="name" value="<%= destination.name %>" required>
  </div>
</div>
<div class="row">
  <div class="col-25">
    <label for="pass">Pass Required</label>
  </div>
  <div class="col-75">
    <select name="pass" id="pass" required>
      <option value="Northwest Forest Pass">Northwest Forest Pass</option>
      <option value="National Forest Pass">National Forest Pass</option>
      <option value="Oregon Pacific Coast Pass">Oregon Pacific Coast Pass</option>
      <option value="America the Beautiful National Parks Pass">America the Beautiful National Parks Pass</option>
    </select>
  </div>
</div>
<div class="row">
  <div class="col-25">
    <label for="location">Location:</label>
  </div>
  <div class="col-75">
    <input type="text" name="location" value="<%= destination.location %>">
  </div>
</div>
<div class="row">
  <div class="col-25">
    <label for="gps">GPS Coordinates:</label>
  </div>
  <div class="col-75">
    <input type="text" name="gps" value="<%= destination.gps %>">
  </div>
    </div>
    <br>
    <div class="row">
    <input type="submit" value="Update Destination">
  </div>
</form>
</div>
<%- include('../partials/autoscroll')  %>
<%- include('../partials/footer') %>